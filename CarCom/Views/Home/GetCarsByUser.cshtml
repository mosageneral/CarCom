@model IEnumerable<CarCom.Models.BuyTheCar>

@{
    ViewBag.Title = "GetCarsByUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>جميع الطلبات المقدمة</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BuyingDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Message)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.Car.Name  )
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BuyingDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Message)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.Car.Name )
        </td>
        <td>
          
          
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
